body
	margin:           45px 0px 0px 0px
	background-color: #222
	font-size:        14px
	font-family:      "Helvetica Neue",Helvetica,Arial,sans-serif

nav
	position:         fixed
	top:              0px
	left:             0px
	width:            100%
	height:           36px
	margin:           0px
	padding:          0px
	background-color: #d9d9d9
	border-color:     #e7e7e7
	background:       linear-gradient(top, #f8f8f8 0%, #d9d9d9 100%)
	background:       -webkit-linear-gradient(top, #f8f8f8 0%, #d9d9d9 100%)
	background:       -moz-linear-gradient(top, #f8f8f8 0%, #d9d9d9 100%)
	box-shadow:       0px 0px 10px 2px #000
	z-index:          8000
	a.navbar-brand
		float:           left
		padding:         7px 15px 7px 15px
		font-size:       18px
		color:           #777
		text-decoration: none
	input#search-box
		float:           right
		width:           250px
		margin:          4px 15px 0 5px
		padding:         5px
		color:           #555
		font-size:       14px
		border:          1px solid #ccc
		border-radius:   4px
		box-shadow:      inset 0 1px 1px rgba(0, 0, 0, 0.075)
	ul.navbar-timeline
		float:           left
		position:        relative
		display:         inline-table
		list-style:      none
		margin:          0px
		padding:         0px
		:after
			content:       ""
			clear:         both
			display:       block
		li:hover > ul
			display:       block
		ul
			display:            none
			background-color:   #d9d9d9
			list-style:         none
			margin:             0px
			padding:            0px
			box-shadow:         0px 0px 10px 2px #111
			li a
				color:              #111
				text-decoration:    none
			li
				padding:          10px
			li:hover
				cursor:           pointer
				box-shadow:       inset 0 1px 3px rgba(0, 0, 0, 0.085)
				background-color: #bbb
	ul.navbar-filters
		float:           left
		list-style:      none
		margin:          0px
		padding:         0px
		li
			float:         left
			padding:       10px
			a
				color:       #222
		li:hover
			cursor:           pointer
			background-color: #ccc
		li.active
			background-color: #ccc

div.fancybox-outer
	background-color: black

h2#event-label
	color:       #dadada
	margin:      0px 0px 0px 120px
	text-shadow: 0px 0px 10px #000
h5#event-date
	color:       #bbb
	margin:      0px 0px 0px 120px
	text-shadow: 0px 0px 4px #000
	line-height: 25px

div#grid-view
	margin-left: 110px
	div.event-grid
		position: relative
		float:    left
		width:    220px
		height:   300px
		margin:   10px
		img
			width:      220px
			height:     220px
			box-shadow: 0px 0px 10px 2px #000
		img:hover
			cursor:     pointer
			box-shadow: 0px 0px 10px 1px #777
		small
			position:         absolute
			top:              5px
			right:            5px
			z-index:          100
			color:            #eee
			background-color: #000
			opacity:          0.65
			padding:          3px
			font-weight:      bold
			border-radius:    3px
		h5
			color:       #DBDBDB
			margin:      5px
			font-size:   14px
			font-weight: normal
			text-shadow: 1px 1px 5px #000
			text-align:  center
			line-height: 20px
	div.pic-grid
		float:  left
		width:  310px
		margin: 10px
		img
			width:      310px
			box-shadow: 0px 0px 10px 2px #000
		img:hover
			cursor:     pointer
			box-shadow: 0px 0px 10px 1px #777












@media (max-width: 1100px)
	nav
		a.navbar-brand
			padding:         7px 5px 7px 5px
		input#search-box
			float:           right
			width:           200px
			margin:          3px 5px 0px 5px
		ul.navbar-filters
			display: none

	h2#event-label
		margin:      10px
	h5#event-date
		margin:      30px

	div#grid-view
		margin:     0px
		div.event-grid
			width:    154px
			height:   250px
			margin:   3px
			img
				width:      154px
				height:     154px
				box-shadow: 0px 0px 4px 1px #000
			img:hover
				cursor:     pointer
				box-shadow: 0px 0px 4px 1px #000
			small
				top:              2px
				right:            2px
				padding:          3px
			h5
				line-height: 17px
		div.pic-grid
			width:      310px
			margin:     5px 5px 10px 5px
			img
				width:      310px
				box-shadow: 0px 0px 4px 1px #000
			img:hover
				cursor:     pointer
				box-shadow: 0px 0px 4px 1px #000

@media (max-width: 1100px) and (orientation: landscape)
	div#grid-view
		div.event-grid
			width:        136px
			height:       250px
			img
				width:      136px
				height:     136px
		div.pic-grid
			width:        570px
			margin:       10px 0px 10px 0px
			img
				width:      570px
