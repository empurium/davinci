body
	margin:           45px 0px 0px 0px
	background-color: #222
	font-size:        14px
	font-family:      "Helvetica Neue",Helvetica,Arial,sans-serif

nav
	position:         fixed
	top:              0px
	left:             0px
	width:            100%
	height:           36px
	margin:           0px
	padding:          0px
	background-color: #f8f8f8
	border-color:     #e7e7e7
	z-index:          8000
	a.navbar-brand
		float:           left
		padding:         7px 15px 7px 15px
		font-size:       18px
		color:           #777
		text-decoration: none
	input#search-box
		float:           right
		width:           250px
		margin:          3px 15px 0 5px
		padding:         5px
		color:           #555
		font-size:       14px
		border:          1px solid #ccc
		border-radius:   4px
		box-shadow:      inset 0 1px 1px rgba(0, 0, 0, 0.075)
	ul
		float:           left
		list-style-type: none
		margin:          0px
		padding:         0px
		li
			float:         left
			padding:       10px
			a
				color:       #222
		li:hover
			cursor:           pointer
			background-color: #ccc
		li.active
			background-color: #ccc

div.fancybox-outer
	background-color: black

h2#event-label
	color:       #dadada
	margin:      25px 25px 25px 110px
	text-shadow: 0px 0px 10px #000
h4#event-date
	color:       #bbb
	margin:      50px 10px 10px 110px
	text-shadow: 0px 0px 4px #000
	line-height: 25px

div#timeline
	position:         fixed
	float:            left
	width:            110px
	margin:           0px
	background-color: #111
	ul
		list-style-type: none
		padding:         10px
	ul ol
		list-style-type: none
		padding-left:    20px

div#grid-view
	margin-left: 110px
	div.event-grid
		position: relative
		float:    left
		width:    220px
		height:   300px
		margin:   10px
		img
			width:      220px
			height:     220px
			box-shadow: 0px 0px 10px 2px #000
		img:hover
			cursor:     pointer
			box-shadow: 0px 0px 10px 1px #777
		small
			position:         absolute
			top:              5px
			right:            5px
			z-index:          100
			color:            #eee
			background-color: #000
			opacity:          0.65
			padding:          3px
			font-weight:      bold
			border-radius:    3px
		h5
			color:       #DBDBDB
			text-shadow: 1px 1px 5px #000
			text-align:  center
			line-height: 20px
	div.pic-grid
		float:  left
		width:  310px
		margin: 10px
		img
			width:      310px
			box-shadow: 0px 0px 10px 2px #000
		img:hover
			cursor:     pointer
			box-shadow: 0px 0px 10px 1px #777












@media (max-width: 1100px)
	nav
		a.navbar-brand
			padding:         7px 5px 7px 5px
		input#search-box
			float:           right
			width:           250px
			margin:          3px 5px 0px 5px
		ul
			display: none

	h2#event-label
		margin:      10px
	h4#event-date
		margin:      30px

	div#timeline
		position:         relative
		float:            left
		width:            154px
		background-color: #111
		font-size:        18px
		margin-right:     6px

	div#grid-view
		margin:     0px
		div.event-grid
			width:    154px
			height:   250px
			margin:   3px
			img
				width:      154px
				height:     154px
				box-shadow: 0px 0px 4px 1px #000
			img:hover
				cursor:     pointer
				box-shadow: 0px 0px 4px 1px #000
			small
				top:              2px
				right:            2px
				padding:          3px
			h5
				line-height: 17px
		div.pic-grid
			width:      310px
			margin:     5px 5px 10px 5px
			img
				width:      310px
				box-shadow: 0px 0px 4px 1px #000
			img:hover
				cursor:     pointer
				box-shadow: 0px 0px 4px 1px #000

@media (max-width: 1100px) and (orientation: landscape)
	div#grid-view
		div.event-grid
			width:        136px
			height:       250px
			img
				width:      136px
				height:     136px
		div.pic-grid
			width:        570px
			margin:       10px 0px 10px 0px
			img
				width:      570px
